---
import { Icon } from "astro-icon/components";
---

<div class="flex flex-col items-center text-center mt-8">
  <pp class="text-5xl text-white font-bold">
    Hola, soy
    <h1
      class="bg-gradient-to-r from-indigo-600 via-purple-500 to-pink-500 text-transparent bg-clip-text"
    >
      David Hernandez
    </h1>
  </pp>
  <p class="text-3xl text-white mt-5">Desarrollador Frontend</p>
  <div class="flex mt-3">
    <a
      href="https://github.com/CrazyPosho"
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-400 hover:text-gray-200 transition-all duration-300 px-4 py-2 rounded-full"
      aria-label="Github"
    >
      <Icon
        class="hover:animate-pulse cursor-pointer"
        name="github"
        size={25}
      />
    </a>
    <a
      href="https://github.com/CrazyPosho"
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-400 hover:text-gray-200 transition-all duration-300 px-4 py-2 rounded-full"
      aria-label="Linkedin"
    >
      <Icon
        class="hover:animate-pulse cursor-pointer"
        name="linkedin"
        size={25}
      />
    </a>
  </div>
</div>
