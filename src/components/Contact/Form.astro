---
const mainPageTitle = "Contáctame";
---

<section class="py-4 px-4">
  <h1
    class="bg-gradient-to-r from-indigo-600 via-purple-500 to-pink-500 text-transparent bg-clip-text text-center text-4xl font-bold mb-4"
  >
    {mainPageTitle}
  </h1>

  <div
    class="relative group rounded-2xl p-1 bg-gradient-to-br from-indigo-600 via-purple-500 to-pink-500 shadow-xl"
  >
    <div class="bg-white dark:bg-slate-900 rounded-xl p-8 md:p-12">
      <form
        action="https://formspree.io/f/movvjdwd"
        method="POST"
        class="space-y-8"
      >
        {/* Grid principal para los campos Nombre, Email y Mensaje */}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-8">
          {/* --- Columna Izquierda: Nombre y Email --- */}
          <div class="space-y-8">
            {/* Campo de Nombre */}
            <div class="relative">
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-indigo-500 dark:text-indigo-400"
                    ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"
                    ></path><circle cx="12" cy="7" r="4"></circle></svg
                  >
                </div>
                <input
                  id="name"
                  type="text"
                  name="name"
                  required
                  maxlength="30"
                  class="peer w-full pl-11 pr-4 py-3.5 bg-slate-100 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 dark:text-white placeholder-transparent transition-all duration-200"
                  placeholder="Tu nombre completo"
                />
                <label
                  for="name"
                  class="absolute left-11 top-3.5 px-1 bg-transparent text-slate-500 dark:text-slate-400 text-base transition-all duration-200 pointer-events-none
                            peer-placeholder-shown:text-base peer-placeholder-shown:top-3.5
                            peer-focus:text-xs peer-focus:-top-2.5 peer-focus:left-3 peer-focus:bg-white dark:peer-focus:bg-slate-900 peer-focus:text-indigo-600 dark:peer-focus:text-indigo-400 peer-focus:rounded-sm
                            [&:not(peer-placeholder-shown)]:text-xs [&:not(peer-placeholder-shown)]:-top-2.5"
                  >Tu nombre completo</label
                >
              </div>
            </div>

            {/* Campo de Email */}
            <div class="relative">
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-indigo-500 dark:text-indigo-400"
                    ><path
                      d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                    ></path><polyline points="22,6 12,13 2,6"></polyline></svg
                  >
                </div>
                <input
                  id="email"
                  type="email"
                  name="email"
                  required
                  pattern="^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,}$/i"
                  class="peer w-full pl-11 pr-4 py-3.5 bg-slate-100 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 dark:text-white placeholder-transparent transition-all duration-200"
                  placeholder="tu@email.com"
                />
                <label
                  for="email"
                  class="absolute left-11 top-3.5 px-1 bg-transparent text-slate-500 dark:text-slate-400 text-base transition-all duration-200 pointer-events-none
                            peer-placeholder-shown:text-base peer-placeholder-shown:top-3.5
                            peer-focus:text-xs peer-focus:-top-2.5 peer-focus:left-3 peer-focus:bg-white dark:peer-focus:bg-slate-900 peer-focus:text-indigo-600 dark:peer-focus:text-indigo-400 peer-focus:rounded-sm
                            [&:not(peer-placeholder-shown)]:text-xs [&:not(peer-placeholder-shown)]:-top-2.5"
                  >tu@email.com</label
                >
              </div>
            </div>
          </div>

          {/* --- Columna Derecha: Solo Mensaje --- */}
          <div class="flex flex-col">
            <div class="relative flex-grow">
              <div class="absolute top-3.5 left-3.5 pointer-events-none">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-indigo-500 dark:text-indigo-400"
                  ><path
                    d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
                  ></path><path d="m10 8-2 2 2 2"></path><path d="m14 8 2 2-2 2"
                  ></path></svg
                >
              </div>
              <textarea
                id="message"
                name="message"
                required
                class="peer w-full h-full min-h-[160px] pl-11 pr-4 py-3.5 bg-slate-100 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900 dark:text-white placeholder-transparent transition-all duration-200 resize-none"
                placeholder="¿En qué puedo ayudarte?"></textarea>
              <label
                for="message"
                class="absolute left-11 top-3.5 px-1 bg-transparent text-slate-500 dark:text-slate-400 text-base transition-all duration-200 pointer-events-none
                peer-placeholder-shown:text-base peer-placeholder-shown:top-3.5
                peer-focus:text-xs peer-focus:-top-2.5 peer-focus:left-3 peer-focus:bg-white dark:peer-focus:bg-slate-900 peer-focus:text-indigo-600 dark:peer-focus:text-indigo-400 peer-focus:rounded-sm
                [&:not(peer-placeholder-shown)]:text-xs [&:not(peer-placeholder-shown)]:-top-2.5"
                >¿En qué puedo ayudarte?</label
              >
            </div>
          </div>
        </div>

        {/* Botón de Envío */}
        <div>
          <button
            type="submit"
            class="w-full px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center gap-2 group shadow-lg hover:shadow-xl hover:shadow-purple-500/30 transform hover:scale-105 text-base cursor-pointer"
          >
            <span>Enviar Mensaje</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="transform group-hover:translate-x-1 transition-transform"
              ><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path></svg
            >
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
