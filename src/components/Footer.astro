---
const currentYear = new Date().getFullYear();
const footerText = "David Hernandez";
import { Icon } from "astro-icon/components";
---

<footer class=" py-3 md:py-4 bg-gradient-to-r from-blue-900/40">
  <div class="container mx-auto px-4">
    <div
      class="bg-gray-900/80 rounded-full px-4 py-2 backdrop-blur-sm shadow-lg flex items-center justify-around max-w-3xl w-full mx-auto opacity-100 visible relative"
    >
      <p class="text-xs md:text-xl text-gray-400 text-center md:text-left">
        {footerText} Â© {currentYear}
      </p>
      <div class="flex space-x-4 md:space-x-6">
        <a
          href="https://github.com/CrazyPosho"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-gray-200 transition-all duration-300 px-4 py-2 rounded-full"
          aria-label="Github"
        >
          <Icon
            class="hover:animate-pulse cursor-pointer"
            name="github"
            size={25}
          />
        </a>
        <a
          href="https://github.com/CrazyPosho"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-gray-200 transition-all duration-300 px-4 py-2 rounded-full"
          aria-label="Github"
        >
          <Icon
            class="hover:animate-pulse cursor-pointer text-white"
            name="linkedin"
            size={25}
          />
        </a>
      </div>
    </div>
  </div>
</footer>
